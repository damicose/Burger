<h1>EAT DA BURGER</h1>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">BURGER Name</span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="eatburger">DEVOUR</button>

      <a href="/{{this.id}}">EAT DA BURGER?</a>
  	</li>
  {{/each}}
</ul>

<h2>Add A BURGER</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burgName">Burger Name</label>
    <input type="text" id="burgName" name="burger">
  </div>

  <button id="burgSubmit" type="submit">Add BURGER</button>
</form>